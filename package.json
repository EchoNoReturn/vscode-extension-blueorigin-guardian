{
  "name": "vscode-extension-blueorigin-guardian",
  "displayName": "vscode-extension-blueorigin-guardian",
  "description": "蓝源卫士 vscode 插件",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.57.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onView:blueOrigin_guardian_explorer"
  ],
  "contributes": {
    "commands": [
      {
        "command": "vscode-extension-blueorigin-guardian.runScanner",
        "title": "扫描当前项目",
        "category": "blueorigin"
      },
      {
        "command": "vscode-extension-blueorigin-guardian.reScan",
        "title": "重新扫描",
        "category": "blueorigin"
      },
      {
        "command": "vscode-extension-blueorigin-guardian.refresh",
        "title": "刷新",
        "category": "blueorigin",
        "icon": {
          "light": "resources/refresh_black.svg",
          "dark": "resources/refresh_white.svg"
        }
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "blueOriginGuardian",
          "title": "蓝源卫士",
          "icon": "resources/blueOriginGuardian_white.svg"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "blueOrigin_guardian_currentFile",
          "name": "蓝源卫士：当前文件情况",
          "type": "tree"
        }
      ],
      "blueOriginGuardian": [
        {
          "id": "blueOrigin_guardian_details",
          "name": "详情",
          "type": "webview"
        },
        {
          "id": "blueOrigin_guardian_vulnerabilities",
          "name": "所有漏洞"
        },
        {
          "id": "blueOrigin_guardian_components",
          "name": "所有组件"
        },
        {
          "id": "blueOrigin_guardian_licenses",
          "name": "所有许可证"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "vscode-extension-blueorigin-guardian.refresh",
          "group": "navigation",
          "when": "view == blueOrigin_guardian_details"
        }
      ],
      "editor/context": [
        {
          "submenu": "blueOriginGuardian"
        }
      ],
      "blueOriginGuardian": [
        {
          "command": "vscode-extension-blueorigin-guardian.runScanner",
          "group": "navigate"
        },
        {
          "command": "vscode-extension-blueorigin-guardian.reScan",
          "group": "navigate"
        }
      ]
    },
    "submenus": [
      {
        "id": "blueOriginGuardian",
        "label": "蓝源卫士"
      }
    ],
    "configuration": {
      "title": "蓝源卫士",
      "type": "object",
      "properties": {
        "blueOriginGuardian.enable": {
          "type": "boolean",
          "default": true,
          "description": "是否启用蓝源卫士",
          "scope": "application"
        },
        "blueOriginGuardian.serverAddr": {
          "type": "string",
          "default": "http://192.168.0.37:8081",
          "format": "url",
          "description": "蓝源卫士服务器地址",
          "scope": "application"
        },
        "blueOriginGuardian.login": {
          "type": "string",
          "default": "admin@localhost.com",
          "description": "蓝源卫士服务账户",
          "scope": "application"
        },
        "blueOriginGuardian.password": {
          "type": "string",
          "format": "password",
          "default": "adminblue",
          "description": "蓝源卫士服务器密码",
          "scope": "application"
        },
        "blueOriginGuardian.scope": {
          "type": "string",
          "enum": [
            "both",
            "foss",
            "custom"
          ],
          "default": "foss",
          "description": "蓝源卫士扫描范围可选值：both(开源库与私有库联合)、foss(开源库)、custom(私有库)。默认值为 foss",
          "scope": "application"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/lodash": "^4.17.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.87.0",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vscode/test-cli": "^0.0.6",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "axios": "^1.6.8",
    "compressing": "^1.10.0",
    "form-data": "^4.0.0",
    "lodash": "^4.17.21"
  }
}